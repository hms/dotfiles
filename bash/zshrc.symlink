# Standard bashrc early escape when not running interactively.
if [ -z "$PS1" ]; then return; fi

DOTFILES=$HOME/devel/dotfiles

for sh_file in `ls $DOTFILES/bash/zshrc.zsh $DOTFILES/bash/*/*.sh $DOTFILES/bash/*.sh`; do
  source $sh_file
done

